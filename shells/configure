#!/usr/bin/env bash
##############################################################################
##
## Shells. Configure
##
## wocson (c) 2008
##
##############################################################################
SETTINGS="./.settings"

OSTYPE="$(uname)"

## For find compratible on Linux
if [[ "${OSTYPE^^}" =~ "BSD" ]]; then
    cp -f "$SETTINGS"/Makefile.BSD ./Makefile
    echo "Create BSD 'Makefile' type"
elif [[ "${OSTYPE^^}" == "LINUX" ]]; then
    cp -f "$SETTINGS"/Makefile.Lnx ./Makefile
    echo "Linux type"
else
    echo -en "\nUnknowmn OS. Close.\n\n"
fi

cp ./$SETTINGS/mc.menu.gen ./.mc.menu

echo "'make system' - install for all system"
echo "'make user'   - install for current user"
echo "'make users'  - install for all users"
echo -e "'make root'   - install for root\n"

exit 0
