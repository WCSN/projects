<?xml version="1.0" encoding="UTF-8"?>
<config>
	<Options>
		<Datafiles filedata="/home/wocson/data/nfparser.dat" filestat="/home/wocson/data/nfparser.sta"/>
		<Pidfile pidfile="/home/wocson/var/run/nfparser.pid"/>
		<Timeoutstat timeoutstatistic="10"/> <!-- in seconds -->
		<Flows maxflows="64"/> <!-- increase this if have drop packets -->
	</Options>
	<Connections>
		<!--
			lhost - local host
			dhost - Vradius host IP
			dport - Vradius host port
			username - name autorisation
			sharedSecret - "secret"  ???
		-->
		<VRadiusIP lhost="10.255.2.99" dhost="10.255.2.233" dport="3813" username="nfparser" sharedSecret="secret"/>
		<!--
			lhost - local host
			lport - local port
			dhost - TemplateProcessor host IP
			dport - TemplateProcessor host port
			username - name authorization
			id - identificator nfparser instance NFPARSER1,"any other" 
		-->
		<TemplateProcessorIP lhost="0.0.0.0" lport="0" dhost="10.255.2.99" dport="7777" id="NFPARSER1"/>
		<!--
			dhost - Nflows Source host IP Ex.: 0.0.0.0 listen all on source port
			dport - Nflows Source host port
		-->
		<NflowSourceIP dhost="0.0.0.0" dport="9993"/>
	</Connections>
	<Filters>
		<!--
		   	
		-->
		
		<Filter id="DNS"> <!-- TRUE -->
		   	<srcNet network="10.255.2.0/24" operation="included"/> <!-- operation="include" / operation="exclude"-->
		    <dstport value="53" operation="include"/>
	    	<protocol value="17" operation="include"/>
	    	<typeos value="255" operation="include"/> 
	   	</Filter> 
   	
		<Filter id="TEST 01"> <!-- FALSE -->
		   	<srcNet network="10.255.2.0/24" operation="include"/> <!-- operation="include" / operation="exclude"-->
		   	<dstNet network="10.255.2.0/24" operation="include"/>
		    <dstport value="80" operation="include"/>
	    	<protocol value="6" operation="include"/>
	    	<typeos value="255" operation="include"/> 
	   	</Filter> 
	   		   	
		<Filter id="TEST 02"> 
		   	<srcNet network="10.255.1.0/24" operation="include"/> <!-- operation="include" / operation="exclude"-->
		    <dstport value="80" operation="include"/>
	    	<protocol value="6" operation="include"/>
	    	<typeos value="255" operation="exclude"/> 
	   	</Filter> <!-- TRUE -->
	   	
		<Filter id="TEST 03"> 
		   	<dstNet network="10.255.3.0/24" operation="include"/>
		    <dstport value="80" operation="include"/>
	    	<protocol value="6" operation="exclude"/>
	    	<typeos value="255" operation="include"/> 
	   	</Filter> 
	   	
	   	
	   	
	   	
  </Filters>
</config>
